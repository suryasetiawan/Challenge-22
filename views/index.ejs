<% include partials/header %>
    <div class="container">
    <br>

    <h1>
      <center>BREAD(Browse, Read, Edit, Add, Delete)</center>

      Filters
    </h1>

    <div class="panel-body">

      <form class="form-horizontal" action="" method="get">
           <!-- <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkid" name="checkid" <%= query.checkid ? ' checked' : '' %>> ID</label>
                 <div class="col-sm-10">
                     <input type="integer" class="form-control form-control-sm" id="id" placeholder="ID" name="id" value="<%= query.id %>">
                 </div>
             </div> -->
           <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkstring" name="checkstring" <%= query.checkstring ? ' checked' : '' %>> String</label>
                  <div class="col-sm-10">
                      <input type="text" class="form-control form-control-sm" id="string" placeholder="String" name="string" value="<%= query.string %>">
                 </div>
             </div>
           <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkinteger" name="checkinteger" <%= query.checkinteger ? ' checked' : '' %>> Integer</label>
                   <div class="col-sm-10">
                      <input type="integer" class="form-control form-control-sm" id="integer" placeholder="Integer" name="integer" value="<%= query.integer %>">
                   </div>
             </div>
           <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkfloat" name="checkfloat" <%= query.checkfloat ? ' checked' : '' %>> Float </label>
                  <div class="col-sm-10">
                      <input type="float" class="form-control form-control-sm" id="float" placeholder="Float" name="float" value="<%= query.float %>">
                   </div>
             </div>
           <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkdate" name="checkdate" <%= query.checkdate ? ' checked' : '' %>> Date</label>
                   <div class="col-sm-5">
                       Start Date
                       <input type="date" class="form-control form-control-sm" id="startdate" placeholder="Date" name="startdate" value="<%= query.date %>">
                       <br> End Date
                       <input type="date" class="form-control form-control-sm" id="enddate" placeholder="Date" name="enddate" value="<%= query.date %>">
                   </div>
             </div>
           <div class="form-group row">
             <label class="col-sm-2 col-form-label"><input type="checkbox" id="checkboolean" name="checkboolean" <%= query.checkboolean ? ' checked' : '' %>> Boolean</label>
                   <div class="col-sm-10">
                       <select class="form-control" id="boolean" name="boolean" value="<%= query.boolean %>">
                           <option value="TRUE">true</option>
                           <option value="FALSE">false</option>
                       </select>
                   </div>
             </div>
             <br>
             <div class="form-group">
                 <div class="col-sm-offset-2 col-sm-10">
                     <button type="submit" class="btn btn-primary">Search</button>
                     <a href="/" class="btn btn-warning">Reset</a>
                 </div>

             </div>
           </div>
       </div>
       </form>

    <div class="container">
    <table class="table table-striped table-dark">
      <thead>
        <tr class="table-primary">
          <!-- <th>ID</th> -->
          <th>String</th>
          <th>Integer</th>
          <th>Float</th>
          <th>Date</th>
          <th>Boolean</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
       <% data.forEach((item)=>{ %>
          <tr>
            <!-- <td><%= item._id %></td> -->
            <td><%= item.string %></td>
            <td><%= item.integer %></td>
            <td><%= item.float %></td>
            <td><%= item.date %></td>
            <td><%= item.boolean %></td>
            <td>
             <a href="edit/<%= item._id %>" class="btn btn-success">edit</a>
             <a href="delete/<%= item._id %>" class="btn btn-danger" >delete</a>
            </td>
          </tr>
       <% }) %>
          </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item <%= page == 1 ? 'disabled' : ''; %>"><a class="page-link" href="/?page=<%=
          parseInt(page)-1%>">&laquo;</a></li>
          <% for (let i = 1; i<=pages; i++) { %>
          <li class="page-item <%= page == i ? 'active' : ''; %>"><a class="page-link" href="/?page=<%= i
          %>">
          <%= i %></a></li>
          <% }; %>
          <li class="page-item <%= page == pages ? 'disabled' : ''; %>"><a class="page-link"
          href="/?page=<%= parseInt(page) + 1%>">&raquo;</a></li>

        </ul>
      </nav>
    <a href="add" class="btn btn-primary">Add</a>
  </div>
  </div>
  <% include partials/footer %>
